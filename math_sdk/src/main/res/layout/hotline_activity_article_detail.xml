<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotline_solution_article_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/hotline_solution_article_title_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotline_article_thick_border"
        android:layout_alignParentTop="true"
        android:background="@color/hotline_divider_light" />

    <include
        layout="@layout/hotline_partial_article_voting_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hotline_contact_us_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true" />

    <include
        layout="@layout/hotline_partial_start_conversation_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
